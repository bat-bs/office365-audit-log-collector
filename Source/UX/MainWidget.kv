<MainWidget>:
    orientation: "vertical"
    TabWidget:
        id: tab_widget
        size_hint: 1, 0.9
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.1
        MDSeparator:
            size_hint: 1, 0.05
        ScalingLabel:
            id: status_label
            valign: "middle"
            halign: "center"
            text: "[color=#ffff00]Not logged in.[/color]"

<TabWidget>:
    lock_swiping: True
    ConnectionWidget:
        id: connection_widget
        title: "1. Connect"
    SubscriberWidget:
        id: subscriber_widget
        title: "2. Subscribe"
    ConfigWidget:
        id: config_widget
        title: "3. Configure"
    CollectorWidget:
        id: collector_widget
        title: "4. Collect"

<ScalingLabel@MDLabel>:
    text_size: root.width, None
    size: self.texture_size
